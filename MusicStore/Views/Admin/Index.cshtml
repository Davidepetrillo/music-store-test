@model List<StrumentoMusicale>

<div class="container" style="padding-top: 65px">
    <div class="container text-center">
        <a class="btn btn-primary"
        href="@Url.Action("Create", "Admin")">
            Aggiungi nuovo strumento musicale
        </a>
    </div>


    <table id='mytab1' class="table align-middle">
        <thead>
            <tr>
                <th scope="col">Foto</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Categoria</th>
                <th scope="col">Quantità</th>
                <th scope="col">Prezzo</th>

            </tr>
        </thead>
        <tbody>

        @foreach(StrumentoMusicale strumentoMusicale in Model)
        {
            <tr>
                <td><img src="@strumentoMusicale.Foto" alt="@strumentoMusicale.Nome" width=250 height="200"></td>
                <td class="align-middle">@strumentoMusicale.Nome</td>
                <td class="align-middle">@strumentoMusicale.Descrizione</td>

                @if(strumentoMusicale.Categoria != null)
                {
                    <td class="align-middle">@strumentoMusicale.Categoria.nomeCategoria</td>
                }else
                {
                    <td>Nessuna Categoria Associata</td>
                }

                @if(strumentoMusicale.QuantitaStrumento <= 10)
                {
                    <td class="align-middle text-danger">@strumentoMusicale.QuantitaStrumento</td>
                }
                else if(strumentoMusicale.QuantitaStrumento > 10 && strumentoMusicale.QuantitaStrumento <= 20)
                {
                    <td class="align-middle text-warning">@strumentoMusicale.QuantitaStrumento</td>
                }
                else
                {
                    <td class="align-middle">@strumentoMusicale.QuantitaStrumento</td>
                }  

                <td class="align-middle">@strumentoMusicale.Prezzo &euro;</td>
                <td class="align-middle">
                    <a class="btn btn-sm" href="@Url.Action("Details", "Admin", new{id = strumentoMusicale.Id})">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M15 12c0 1.654-1.346 3-3 3s-3-1.346-3-3 1.346-3 3-3 3 1.346 3 3zm9-.449s-4.252 8.449-11.985 8.449c-7.18 0-12.015-8.449-12.015-8.449s4.446-7.551 12.015-7.551c7.694 0 11.985 7.551 11.985 7.551zm-7 .449c0-2.757-2.243-5-5-5s-5 2.243-5 5 2.243 5 5 5 5-2.243 5-5z"/></svg></a>
                    <br>
                    <a class="btn btn-sm" href="@Url.Action("Update", "Admin", new{id = strumentoMusicale.Id})">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polygon points="14 2 18 6 7 17 3 17 3 13 14 2"></polygon><line x1="3" y1="22" x2="21" y2="22"></line></svg>
                    </a>
                    <form action="@Url.Action("Delete", "Admin", new{id = strumentoMusicale.Id})" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                        </button>
                    </form>
                    
                    <a class="btn btn-sm" href="@Url.Action("RifornisciArticolo", "Admin", new{id = strumentoMusicale.Id})">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
                            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z"/>
                        </svg>
                    </a>
                    
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
