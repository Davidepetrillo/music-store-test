@model CategoriaStrumento

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuovo Strumento</h1>
            </div>
            <form action="@Url.Action("Create", "Admin")" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Immagine:</strong>
                    <input asp-for="StrumentiMusicali.Foto" class="d-block w-100" />
                    <span asp-validation-for="StrumentiMusicali.Foto" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Titolo:</strong>
                    <input asp-for="StrumentiMusicali.Nome" class="d-block w-100" />
                    <span asp-validation-for="StrumentiMusicali.Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Contenuto:</strong>
                    <textarea asp-for="StrumentiMusicali.Descrizione" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="StrumentiMusicali.Descrizione" class="text-danger"></span>
                </div>
                 <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input asp-for="StrumentiMusicali.Prezzo" class="d-block w-10" />
                    <span asp-validation-for="StrumentiMusicali.Prezzo" class="text-danger"></span>
                </div>
                 <div class="mb-3">
                    <strong>Quantita:</strong>
                    <input type="number" asp-for="StrumentiMusicali.QuantitaStrumento" class="d-block w-5" />
                    <span asp-validation-for="StrumentiMusicali.QuantitaStrumento" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Categoria:</strong>
                    
                 <!select  asp-for="StrumentiMusicali.CategoriaId"  class="form-select" aria-label="Default select example">
                       <option selected>Seleziona una categoria</option>
                        @foreach(Categoria category in Model.Categorie)
                        {
                            <option value="@category.Id">@category.nomeCategoria</option>
                        } 
                    </!select>
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>
            </form>
        </div>
    </div>
</div>

