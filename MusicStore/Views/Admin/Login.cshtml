@model LoginAdmin
@{
    ViewBag.Title = "Login form";
}

@using (Html.BeginForm("Login", "Admin"))
{
    <span style="font-weight:bolder; font-size:16px; color:red;">@ViewBag.Message</span>

    <form action="@Url.Action("Login", "Admin")" method="post" autocomplete="off">
    @Html.AntiForgeryToken()
        <h2>Admin Login</h2>
        <div class="row">
            <div class="form-group col-6">   
                <lable class="form-label" for="UserName">UserName</lable>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-6">
                <lable class="form-label" for="Password">Password</lable>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12">
                <input type="submit" value="Submit" />
            </div>
        </div>
    </form>
}