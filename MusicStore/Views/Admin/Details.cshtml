@model StrumentoMusicale

<div class="container justify-content-center">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Strumento</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Foto" height="500" width="600">
            </div>
            <h4>
                <strong>Nome Strumento:</strong>
                @Model.Nome
            </h4>
            <h4>
                <strong>Contenuto:</strong>
                @Model.Descrizione  
            </h4>
             <h4>
                <strong>Prezzo:</strong>
                @Model.Prezzo &euro;
            </h4>
             <h4>
                <strong>Quantità:</strong>
                @Model.QuantitaStrumento
            </h4>
            <h4>
            <strong>Categoria:</strong>
                @if(Model.Categoria != null)
                {
                    <span>@Model.Categoria.nomeCategoria</span>
                }else
                {
                    <span>Nessuna Categoria Associata</span>
                }
            </h4>
        </div>
    </div>
</div>

