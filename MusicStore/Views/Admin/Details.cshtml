@model StrumentoMusicale

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Strumento</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Foto">
            </div>
            <p>
                <strong>Nome Viaggio:</strong>
                @Model.Nome
            </p>
            <p>
                <strong>Contenuto:</strong>
                @Model.Descrizione  
            </p>
             <p>
                <strong>Prezzo:</strong>
                @Model.Prezzo
            </p>
             <p>
                <strong>Quantità:</strong>
                @Model.QuantitaStrumento
            </p>
            <p>
            <strong>Categoria:</strong>
                @if(Model.Categoria != null)
                {
                    <span>@Model.Categoria.nomeCategoria</span>
                }else
                {
                    <span>Nessuna Categoria Associata</span>
                }
            </p>
        </div>
    </div>
</div>