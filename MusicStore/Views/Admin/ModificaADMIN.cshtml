@model StrumentoMusicale
<div class="container" style="padding-top: 65px">
    <div class="d-flex align-items-center">
        <h1 class="mt-3 mb-3">Modifica lo Strumento Musicale </h1>
    </div>

    <form asp-controller="Admin" asp-action="Aggiorna" asp-route-id="@Model.Id" method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <div class="form-outline">
            <input asp-for="Foto" type="url" class="form-control" />
            <label class="form-label" for="Immagine"> Foto </label>
        </div>

        <div class="form-outline">
            <input asp-for="Nome" type="text" class="form-control" />
            <label class="form-label" for="Nome">Nome </label>
        </div>

        <div class="form-outline mb-4">
        <textarea asp-for="Descrizione" rows="10" class="form-control"></textarea>
        <label class="form-label" for="Descrizione">Descrizione</label>
        </div>

        <div class="form-outline mb-4">
        <input asp-for="Prezzo" type="number" min="1" step="any" class="form-control" />
        <label class="form-label" for="Prezzo">Prezzo</label>
 
        <button type="submit" class="btn btn-primary btn-block mb-4"> Modifica </button>
    </form>

</div>
